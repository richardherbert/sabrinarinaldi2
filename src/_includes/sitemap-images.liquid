<?xml version="1.0" encoding="{{ site.encoding }}"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
	<url>
		<loc>{{ site.url | append: '/gallery/' }}</loc>
		{% for gallery in galleries %}
			{% assign images = gallery.items | sort: 'weight' | reverse %}

			{% for image in images %}
				<image:image>
					<image:title>{{ image.title[site.lang] }}</image:title>
					<image:loc>{{ site.url | append: '/media/images/gallery/' | append: image.src }}</image:loc>
					<image:caption>{{ image.desc[site.lang] }}{% if image.size %} ({{ image.size }} cm){% endif %} - {{ site.title | append: ' ' | append: site.description }}</image:caption>
					<image:license>http://creativecommons.org/licenses/by-nc-nd/4.0/</image:license>
				</image:image>
			{% endfor %}
		{% endfor %}
	</url>
</urlset>
